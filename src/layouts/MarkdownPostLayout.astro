---
import BaseLayout from './BaseLayout.astro'
const { frontmatter } = Astro.props;

---

<style>
    a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
  .prose {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
    line-height: 1.65;
    font-size: 1.05rem;
  }

  .prose h1 {
    margin-bottom: 0.25rem;
  }

  .prose .meta {
    color: #777;
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }

  .prose p {
    margin: 1.25rem 0;
  }

  .prose pre {
    padding: 1rem;
    overflow-x: auto;
    border-radius: 6px;
    font-size: 0.9rem;

  }

  .prose code {
    font-size: 0.95em;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;

  }
  .prose pre code {
  display: block;
  }
  .prose :not(pre) > code {
  padding: 0.15em 0.3em;
  border-radius: 4px;
  font-size: 0.9em;
}
  .prose img {
  max-width: 100%;
  height: auto;
}
</style>
  <BaseLayout pageTitle={frontmatter.title}>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{Astro.props.title}</title>
  <header>
    <a href="/blog">‚Üê Back to blog</a>
      </header>
<article class="prose">
  <p class="meta">Written by {frontmatter.author}</p>


  <img
  src={frontmatter.image.url}
  alt={frontmatter.image.alt}
  class="post-image"
/>
   <div class="tags">
    {frontmatter.tags.map((tag: string) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
  <slot />
</article>
  </BaseLayout>
